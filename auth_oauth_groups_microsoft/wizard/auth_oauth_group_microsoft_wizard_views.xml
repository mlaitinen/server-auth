<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_auth_oauth_group_microsoft_wizard" model="ir.ui.view">
        <field name="model">auth.oauth.group.microsoft.wizard</field>
        <field name="arch" type="xml">
            <form string="Fetch Groups from Microsoft Graph API">
                <group>
                    <field name="provider_id" invisible="1"/>
                    <field name="access_token"/>
                    <field name="search_filter"/>
                </group>
                <footer>
                    <button name="fetch_groups" string="Fetch" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
